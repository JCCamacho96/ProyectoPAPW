<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GetPerfilImage</servlet-name>
        <servlet-class>Controllers.GetPerfilImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistraUsuario</servlet-name>
        <servlet-class>Controllers.RegistraUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciaSesion</servlet-name>
        <servlet-class>Controllers.IniciaSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertaArticulo</servlet-name>
        <servlet-class>Controllers.InsertaArticulo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizaArticulo</servlet-name>
        <servlet-class>Controllers.ActualizaArticulo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BorraArticulo</servlet-name>
        <servlet-class>Controllers.BorraArticulo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetImageArticulo</servlet-name>
        <servlet-class>Controllers.GetImageArticulo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarItemCarrito</servlet-name>
        <servlet-class>Controllers.AgregarItemCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizaItemCarrito</servlet-name>
        <servlet-class>Controllers.ActualizaItemCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminaItemCarrito</servlet-name>
        <servlet-class>Controllers.EliminaItemCarrito</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPerfilImage</servlet-name>
        <url-pattern>/GetPerfilImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistraUsuario</servlet-name>
        <url-pattern>/RegistraUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciaSesion</servlet-name>
        <url-pattern>/IniciaSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertaArticulo</servlet-name>
        <url-pattern>/InsertaArticulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizaArticulo</servlet-name>
        <url-pattern>/ActualizaArticulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BorraArticulo</servlet-name>
        <url-pattern>/BorraArticulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetImageArticulo</servlet-name>
        <url-pattern>/GetImageArticulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarItemCarrito</servlet-name>
        <url-pattern>/AgregarItemCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizaItemCarrito</servlet-name>
        <url-pattern>/ActualizaItemCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminaItemCarrito</servlet-name>
        <url-pattern>/EliminaItemCarrito</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <resource-ref>
        <description>Db</description>
        <res-ref-name>jdbc/myDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
